{
  "name": "nasa-recognition",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "npm run test:unit",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "powershell -NoProfile -Command \"npx playwright test 2>&1 | Out-File -FilePath e2e-results.log -Encoding utf8 -Append\"",
    "test:e2e:watch": "powershell -NoProfile -Command \"npx playwright test 2>&1 | Tee-Object -FilePath e2e-results.log\"",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:headed": "playwright test --headed --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug --project=chromium",
    "test:e2e:report": "playwright show-report",
    "test:e2e:clean": "rimraf playwright-report test-results .playwright e2e-results.log",
    "test:ci": "jest --coverage --runInBand",
    "validate-data": "tsx scripts/validate-data.ts",
    "og": "node scripts/capture-og.js"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "image-size": "^2.0.2",
    "lottie-react": "^2.4.1",
    "lottie-web": "^5.13.0",
    "lucide-react": "^0.559.0",
    "next": "16.0.8",
    "ogl": "^1.0.11",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.6.1",
    "puppeteer": "^24.32.1",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
